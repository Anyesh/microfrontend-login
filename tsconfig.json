{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@actions": ["actions"],
      "@actions/*": ["actions/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@constants": ["constants"],
      "@validations": ["validations"],
      "@validations/*": ["validations/*"],
      "@components": ["components"],
      "@definitions/*": ["definitions/*"],
      "@definitions": ["definitions"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@pages/*": ["pages/*"],
      "@reducers": ["reducers"],
      "@reducers/*": ["reducers/*"],
      "@store": ["store"],
      "@server/*": ["server/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@static/*": ["public/static/*"],
      "@test/*": ["test/*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "assets",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*"
  ]
}
